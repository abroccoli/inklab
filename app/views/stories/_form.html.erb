<%= form_for [@story] do |f| %>
    <% if @story.errors.any? %>
      <div class="alert alert-danger" role="alert">
        Hey!
        <ul>
        <% @story.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <%= f.label :title, class: 'form_label' %>
    <br>
    <%= f.text_area :title, class: 'line_entry' %>
    <br>
    <%= f.fields_for :lines do |line_f| %>
      <p class="form_label">First line:</p> <%= line_f.text_field :content, class: 'line_entry' %>
    <% end %>
    <br>
    <%= f.submit 'Create Story', class: 'btn btn-black' %>
<% end %>

