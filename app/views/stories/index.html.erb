<div class="container">
  <div class="row clearfix">
    <div class="col-xs-12 col-sm-12 col-md-3 column fix">
      <h1>Stories:</h1>
      <%= link_to "My Stories", stories_private_path, class: 'link_format'%>
      <br>
      <%= link_to "Create New Story", new_story_path, class: 'link_format'%>
      <br>
      <%= link_to 'Sign out', destroy_user_session_path, :method => :delete, class: 'link_format' %>
    </div>
    <div class="col-md-9 column right">
      <table class = "table table-striped">
        <thead>
          <tr>
            <th>Story Title</th>
          </tr>
        </thead>
        <tbody>
          <% @stories.each do |story| %>
          <tr>
            <td class="title_text">
              <%="#{story.title}"%>
              <br>
              <div class="author">created by: <%= story.user.email  %></div>
            </td>
            <td><%= link_to "Show Story", story_path(story.id), class: 'btn btn-default'%></td>
            <td><%= link_to new_story_line_path(story.id), class: 'btn btn-black' do %>
            <i class="glyphicon glyphicon-pencil"></i> Add to Story
            <%end%></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


